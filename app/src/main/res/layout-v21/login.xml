<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/volunteerLoginButton"
            style="@style/Button.Primary.Orange.Onboarding"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/onboarding_volunteer_login"
            android:textStyle="bold" />

        <Button
            android:id="@+id/refugeeLoginButton"
            style="@style/Button.Primary.Orange.Onboarding"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:onClick="refugeeLoginClicked"
            android:text="@string/onboarding_refugee_login"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>